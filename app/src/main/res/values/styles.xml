<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextSearchTheme" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/shape_edit_text</item>
        <item name="android:drawableLeft">@android:drawable/ic_menu_search</item>
        <item name="android:drawableRight">@android:drawable/ic_menu_close_clear_cancel</item>
        <item name="android:drawableTint">@color/colorTextGray</item>
        <item name="android:layout_height">@dimen/dimen_height_edittext</item>
        <item name="android:paddingLeft">@dimen/dimen_common_padding</item>
        <item name="android:paddingRight">@dimen/dimen_common_padding</item>
        <item name="android:drawablePadding">@dimen/_11sdp</item>
        <item name="android:hint">@android:string/search_go</item>
        <item name="android:textSize">@dimen/dimen_edit_text_size</item>
    </style>


    <style name="Theme.App" parent="Theme.MaterialComponents.Light">
        <item name="boxStrokeWidth">10dp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="colorError">@color/colorPrimary</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

</resources>
